<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".MainActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText android:id="@+id/et_display"
            android:textSize="55sp"
            android:singleLine="true"
            android:gravity="right|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:text="0"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <Button android:id="@+id/btn_seven"
                android:text="7"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_eight"
                android:text="8"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_nine"
                android:text="9"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_plus"
                android:text="+"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btn_four"
                android:text="4"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_five"
                android:text="5"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_six"
                android:text="6"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_subtract"
                android:text="-"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btn_one"
                android:text="1"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_two"
                android:text="2"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_three"
                android:text="3"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_multiply"
                android:text="*"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btn_clear"
                android:text="C"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_zero"
                android:text="0"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_equal"
                android:text="="
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>

            <Button android:id="@+id/btn_divide"
                android:text="/"
                android:textSize="50sp"
                android:layout_weight="1"
                android:layout_height="120dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>