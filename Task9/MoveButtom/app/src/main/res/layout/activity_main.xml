<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jkxy.movebuttom.MainActivity">


    <Button
        android:text="@string/main_viewxml"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_main_viewxml" />

    <Button
        android:text="@string/main_viewcode"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_main_viewxml"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_main_viewcode" />

    <Button
        android:text="@string/main_objectxml"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_main_viewcode"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_main_objectxml" />

    <Button
        android:text="@string/main_objectcode"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_main_objectcode"
        android:layout_below="@+id/btn_main_objectxml"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_a"
        android:layout_below="@+id/btn_main_objectcode"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/iv_main_a" />
</RelativeLayout>
